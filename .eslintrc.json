{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "import"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "@typescript-eslint/no-explicit-any": "error",
    "no-debugger": "off",
    "no-console": 0,
    "class-methods-use-this": "off"
  },
  "root": true
}
